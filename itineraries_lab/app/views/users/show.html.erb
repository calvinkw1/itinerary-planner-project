<h1><%= @user.first_name %> <%= @user.last_name %>'s Itineraries</h1>

<ul>
  <% @user.itineraries.each do |itinerary| %>
  <li><%= link_to itinerary.name, itinerary_path(itinerary) %> â€“ <%= itinerary.start_date.to_s(:long) %> to <%= itinerary.end_date.to_s(:long) %></li>
  <% end %>
</ul>

<p>
  <%= link_to "Add an itinerary", new_itinerary_path(session[:user_id]) %>
</p>

<p>
  <%= link_to "Edit user", edit_user_path %>
</p>

<h3>Comments</h3>

<% @comments.each do |comment| %>
  <p>
  <%= comment.content %> - <%= time_ago_in_words comment.created_at %> ago
  </p>
<% end %>

<%= form_for [@user, Comment.new] do |f| %>
  <div><%= f.text_area :content, :rows => 5 %></div>
  <%= f.submit %>
<% end %>

<p>
  <%= link_to "Go back", root_path %>
</p>