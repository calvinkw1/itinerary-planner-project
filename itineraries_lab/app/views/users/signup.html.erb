<center>
<div class="loginbox">
<h1>Become a User</h1>
<h3> All we need is...</h3>
<%= simple_form_for(@user) do |f|%>

<p>
  <%= f.input(:first_name, autofocus: true) %>
</p>

<p>
  <%= f.input(:last_name) %>
</p>

<p>
  <%= f.input(:username) %>
</p>

<p>
  <%= f.input(:password, required: true) %>
</p>

<p>
  <%= f.button(:submit, "Signup", class: "btn btn-primary") %>
</p>
  <%= link_to "Have an account already? Log in here", login_path, class: "shadow" %>
<% end %>
</center>
</div>