
<h1>Edit Itinerary</h1>

<%= form_for @itinerary do |f| %>

<%= f.hidden_field :user_id, value: session[:user_id] %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>
</p>
<p>
  <%= f.label :origin %>
  <%= f.text_field :origin %>
</p>
<p>
  <%= f.label :destination %>
  <%= f.text_field :destination %>
</p>
<p>
  <%= f.label :start_date %>
  <%= f.text_field :start_date %>
</p>
<p>
  <%= f.label :end_date %>
  <%= f.text_field :end_date %>
</p>
  <h1 class = "commentsubmit btn btn-success btn-md"><%= f.submit %></h1>
<% end %>

<% if @itinerary.errors.any?%>
  <% @itinerary.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
    <% end%>
  <% end%>

<p>
  <%= button_to "Delete Itinerary", itinerary_path(@itinerary), method: :delete, data: { confirm: "Are you sure?!"}, class: "btn btn-danger btn-lg" %>
</p>
<hr>
<p>
  <%= link_to "Cancel", itinerary_path(@itinerary), class: "btn btn-primary btn-lg" %>
</p>