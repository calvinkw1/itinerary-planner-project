<h1>Destinations#new</h1>
<p>Find me in app/views/destinations/new.html.erb</p>

<h1>Add Destination</h1>

<%= form_for @destination do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>
</p>
<p>
  <%= f.label :location %>
  <%= f.text_field :location %>
</p>
<p>
  <%= f.label :start_date %>
  <%= f.text_field :start_date %>
</p>
<p>
  <%= f.label :end_date %>
  <%= f.text_field :end_date %>
</p>
  <%= f.submit %>
<% end %>

<% if @destination.errors.any?%>
  <% @destination.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
    <% end%>
  <% end%>